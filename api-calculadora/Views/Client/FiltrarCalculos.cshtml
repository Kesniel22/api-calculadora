@{
    ViewBag.Title = "FiltrarCalculos";
}

<h2>Filtrar Calculos</h2>

<!-- Formulario para filtrar por operación -->
<form action="@Url.Action("FiltrarCalculos", "Client")" method="get">
    <label for="operacion">Seleccione una operación:</label>
    <select id="operacion" name="operacion">
        <option value="+">Suma (+)</option>
        <option value="-">Resta (-)</option>
        <option value="*">Multiplicación (*)</option>
        <option value="/">División (/)</option>
    </select>
    <button type="submit">Filtrar</button>
</form>

@if (ViewBag.Resultados != null)
{
    <h4>Resultados Filtrados:</h4>
    <table border="1" style="border-collapse: collapse; width: 100%; margin-top: 10px;">
        <thead>
            <tr>
                <th>Operación</th>
                <th>Resultado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resultado in ViewBag.Resultados)
            {
                <tr>
                    <td>@resultado.expresion</td>
                    <td>@resultado.resultado</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (ViewBag.Error != null)
{
    <p style="color: red;">@ViewBag.Error</p>
}
