@{
    ViewBag.Title = "Calculadora Web";
}

<main class="container mt-4">
    <h1 class="text-center">Calculadora Web</h1>
    <p class="lead text-center">Obtiene todos los calculos hechos o filtra operaciones realizadas previamente.</p>

    <div class="text-center mb-4">
        <a href="@Url.Action("ObtenerValores", "Client")" class="btn btn-primary btn-lg">Obtener Valores</a>
        <a href="@Url.Action("FiltrarCalculos", "Client")" class="btn btn-outline-dark btn-lg">Filtrar Cálculos</a>
    </div>

    <!-- Mostrar los resultados de los cálculos obtenidos -->
    @if (ViewBag.Resultados != null)
    {
        <section class="mt-4">
            <h3>Resultados:</h3>
            <pre>@ViewBag.Resultados</pre>
        </section>
    }

    <!-- Mostrar mensaje de error si existe -->
    @if (ViewBag.Error != null)
    {
        <section class="mt-4">
            <p style="color: red;">@ViewBag.Error</p>
        </section>
    }
</main>
